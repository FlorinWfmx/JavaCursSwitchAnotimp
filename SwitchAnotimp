public class SwitchAnotimp {
    public static void main (String[]args){
        char c1 = 'v';
            switch (c1){
                case 'v':
                    System.out.println ("Este cald!");
                    break;
                
                case 'i':
                    System.out.println ("Este frig!");
                    break;
                    
                case 'p':
                    //System.out.println ("Ploua!");
                    //break;
                
                case 't':
                    System.out.println ("Ploua!");
                    break;
                
                default:
                    System.out.println ("Anotimp invalid!");
                    break;
            }
    }
}
